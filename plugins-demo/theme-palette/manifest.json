{
  "id": "theme-palette",
  "name": "主题调色板",
  "version": "1.0.0",
  "description": "Little_100 可视化 CSS 主题编辑器 - 自定义颜色、字体和效果",
  "locales": {
    "en-US": { "name": "Theme Palette", "description": "Little_100 visual CSS theme editor - customize colors, fonts and effects." }
  },
  "author": {
    "name": "Little_100",
    "url": "https://github.com/Little100"
  },
  "main": "main.lua",
  "icon": "icon.png",
  "repository": "https://github.com/Little100/theme-palette",
  "permissions": ["log", "storage", "api"],
  "sidebar": {
    "mode": "category",
    "label": "调色",
    "icon": "palette",
    "show_dependents": true,
    "priority": 50
  },
  "capabilities": ["theme-provider"],
  "theme_var_map": {
    "bg_primary": "--sl-bg",
    "bg_secondary": "--sl-bg-secondary",
    "bg_tertiary": "--sl-bg-tertiary",
    "accent_primary": "--sl-accent",
    "accent_secondary": "--sl-accent-secondary",
    "text_primary": "--sl-text",
    "text_secondary": "--sl-text-secondary",
    "border_color": "--sl-border",
    "glass_blur": "--sl-blur",
    "border_radius": "--sl-radius"
  },
  "presets": {
    "default":  { "bg_primary": "#0a0a0f", "bg_secondary": "#111118", "bg_tertiary": "#1a1a24", "accent_primary": "#60a5fa", "accent_secondary": "#818cf8", "text_primary": "#e2e8f0", "text_secondary": "#94a3b8", "border_color": "#1e293b", "glass_blur": "12px", "border_radius": "12px" },
    "midnight": { "bg_primary": "#0d0d1a", "bg_secondary": "#13132b", "bg_tertiary": "#1a1a3a", "accent_primary": "#7c3aed", "accent_secondary": "#a78bfa", "text_primary": "#e2e8f0", "text_secondary": "#94a3b8", "border_color": "#1e1b4b", "glass_blur": "16px", "border_radius": "16px" },
    "forest":   { "bg_primary": "#0a0f0a", "bg_secondary": "#111811", "bg_tertiary": "#1a241a", "accent_primary": "#22c55e", "accent_secondary": "#4ade80", "text_primary": "#e2e8f0", "text_secondary": "#94a3b8", "border_color": "#14532d", "glass_blur": "10px", "border_radius": "8px" },
    "sunset":   { "bg_primary": "#0f0a0a", "bg_secondary": "#1a1010", "bg_tertiary": "#241a1a", "accent_primary": "#f97316", "accent_secondary": "#fb923c", "text_primary": "#e2e8f0", "text_secondary": "#94a3b8", "border_color": "#431407", "glass_blur": "12px", "border_radius": "12px" },
    "ocean":    { "bg_primary": "#0a0f14", "bg_secondary": "#0f1a24", "bg_tertiary": "#14243a", "accent_primary": "#06b6d4", "accent_secondary": "#22d3ee", "text_primary": "#e2e8f0", "text_secondary": "#94a3b8", "border_color": "#164e63", "glass_blur": "14px", "border_radius": "14px" },
    "rose":     { "bg_primary": "#0f0a0d", "bg_secondary": "#1a1015", "bg_tertiary": "#241a1e", "accent_primary": "#f43f5e", "accent_secondary": "#fb7185", "text_primary": "#e2e8f0", "text_secondary": "#94a3b8", "border_color": "#4c0519", "glass_blur": "12px", "border_radius": "12px" }
  },
  "settings": [
    {
      "key": "bg_primary",
      "label": "主背景色",
      "type": "string",
      "default": "#0a0a0f",
      "description": "主要背景颜色"
    },
    {
      "key": "bg_secondary",
      "label": "次背景色",
      "type": "string",
      "default": "#12121a",
      "description": "次要背景颜色"
    },
    {
      "key": "bg_tertiary",
      "label": "第三背景色",
      "type": "string",
      "default": "#1a1a25",
      "description": "第三层背景颜色"
    },
    {
      "key": "accent_primary",
      "label": "主强调色",
      "type": "string",
      "default": "#60a5fa",
      "description": "主要强调色（按钮、链接、高亮）"
    },
    {
      "key": "accent_secondary",
      "label": "次强调色",
      "type": "string",
      "default": "#818cf8",
      "description": "次要强调色"
    },
    {
      "key": "text_primary",
      "label": "主文字色",
      "type": "string",
      "default": "#e2e8f0",
      "description": "主要文字颜色"
    },
    {
      "key": "text_secondary",
      "label": "次文字色",
      "type": "string",
      "default": "#94a3b8",
      "description": "次要文字颜色"
    },
    {
      "key": "border_color",
      "label": "边框颜色",
      "type": "string",
      "default": "rgba(255, 255, 255, 0.08)",
      "description": "卡片和元素的边框颜色"
    },
    {
      "key": "glass_blur",
      "label": "玻璃模糊度",
      "type": "select",
      "default": "12px",
      "description": "玻璃效果的背景模糊强度",
      "options": [
        { "value": "4px", "label": "轻微 (4px)" },
        { "value": "8px", "label": "中等 (8px)" },
        { "value": "12px", "label": "默认 (12px)" },
        { "value": "20px", "label": "较强 (20px)" },
        { "value": "32px", "label": "超强 (32px)" }
      ]
    },
    {
      "key": "border_radius",
      "label": "圆角大小",
      "type": "select",
      "default": "12px",
      "description": "卡片和元素的圆角大小",
      "options": [
        { "value": "4px", "label": "锐利 (4px)" },
        { "value": "8px", "label": "轻微 (8px)" },
        { "value": "12px", "label": "默认 (12px)" },
        { "value": "16px", "label": "圆润 (16px)" },
        { "value": "24px", "label": "超圆 (24px)" }
      ]
    },
    {
      "key": "preset",
      "label": "颜色预设",
      "type": "select",
      "default": "default",
      "description": "快速应用颜色预设",
      "options": [
        { "value": "default", "label": "深蓝" },
        { "value": "midnight", "label": "午夜紫" },
        { "value": "forest", "label": "森林绿" },
        { "value": "sunset", "label": "日落橙" },
        { "value": "ocean", "label": "海洋青" },
        { "value": "rose", "label": "玫瑰粉" }
      ]
    }
  ]
}
